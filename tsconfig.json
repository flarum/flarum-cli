{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "module": "commonjs",
    "rootDir": ".",
    "strict": true,
    "target": "es2017",
    "typeRoots": ["./node_modules/@types", "./types/"],
    "baseUrl": "./",
    "paths": {
      "boilersmith/*": ["src/boilersmith/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "lib", "dist"]
}
